@model IEnumerable<FoodDeliveryApp.Models.FoodItem>

@{
    ViewData["Title"] = "Browse Food Items by Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <h5 class="section-title ff-secondary text-start text-primary fw-normal">Food Items</h5>
        <h1 class="mb-4">Browse by Category</h1>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                            <p class="card-text"><strong>Category:</strong> @item.Category?.Name</p>
                            <p class="card-text"><strong>Restaurant:</strong> @item.Restaurant?.Name</p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>