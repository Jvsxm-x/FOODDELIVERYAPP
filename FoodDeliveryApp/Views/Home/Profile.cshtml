@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <h5 class="section-title ff-secondary text-start text-primary fw-normal">Profile</h5>
        <h1 class="mb-4">Your Profile</h1>
        <div class="card">
            <div class="card-body">
                <p><strong>Name:</strong> @ViewData["UserName"]</p>
                <p><strong>Role:</strong> @ViewData["UserRole"]</p>
                <a asp-action="Logout" asp-controller="Users" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>